<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-7">
            <h1><%= title %></h1>
            <form class="form" method="post">

                <div class="form-group">
                    <label for="productTextField">Product Name></label>
                    <input type="text" class="form-control"
                    id="productTextField"
                    placeholder="Enter the name of the product"
                    name="product" required>
                </div>

                <div class="form-group">
                    <label for="sizeTextField">Size></label>
                    <input type="text" class="form-control"
                    id="sizeTextField"
                    placeholder="Enter available size"
                    name="size" required>
                </div>
                
                <div class="form-group">
                    <label for="colorTextField">Color></label>
                    <input type="text" class="form-control"
                    id="colorTextField"
                    placeholder="Enter the color of product"
                    name="color" required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price></label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the price of the product"
                    name="price" required>
                </div>
                
                <div class="form-group">
                    <label for="quantityTextField">Quantity></label>
                    <input type="number" class="form-control"
                    id="quantityTextField"
                    placeholder="Enter the quantity"
                    name="quantity" required>
                </div>

                <div class="form-group">
                    <label for="subtotalTextField">Subtotal></label>
                    <input type="text" class="form-control"
                    id="subtotalTextField"
                    placeholder="Enter the subtotal"
                    name="subtotal" required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/shopping-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>
            <form>  
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>